<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/bgg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".peminjaman.Peminjaman">

    <TextView
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Barang"/>

    <EditText
        android:padding="10dp"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:id="@+id/EdtNamaBarang"
        android:enabled="false"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="70dp"
        android:hint="" />

    <TextView
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="130dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kode Barang"/>

    <EditText
        android:padding="10dp"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:id="@+id/EdtKodeBarang"
        android:inputType="number"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="130dp"
        android:hint="" />

    <TextView
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="190dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Merk"/>

    <EditText
        android:padding="10dp"
        android:id="@+id/EdtMerk"
        android:enabled="false"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="190dp"
        android:hint="" />

    <TextView
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="250dp"
      android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jumlah"/>

    <EditText
        android:padding="10dp"
        android:id="@+id/EdtJumlah"
        android:inputType="number"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="250dp"
        android:hint="" />

    <TextView
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="310dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Produsen"/>

    <EditText
        android:padding="10dp"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:id="@+id/EdtProdusen"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="310dp"
        android:hint="" />

    <TextView
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="370dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ruangan"/>

    <EditText
        android:padding="10dp"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="370dp"
        android:id="@+id/EdtRuangan"
        android:hint="" />

    <TextView
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="430dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanggal"/>

    <EditText
        android:padding="10dp"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:id="@+id/EdtTanggal"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="430dp"
        android:hint="" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="150dp"
        android:text="Tambahkan"/>


</RelativeLayout>